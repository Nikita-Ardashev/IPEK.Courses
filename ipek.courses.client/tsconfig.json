{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ES6",
		"target": "ES2021",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@img/*": ["./src/common/assets/img/*"],
			"@assets/*": ["./src/common/assets/*"]
		}
	},
	"exclude": ["node_modules", "public"],
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.d.ts",
		"src/common/utils/colorthief.ts",
		"src/common/utils/getColor.js"
	]
}
