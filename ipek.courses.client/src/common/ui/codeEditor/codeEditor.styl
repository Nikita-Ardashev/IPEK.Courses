@import '../../../variables.styl';

.box-code {
    display: flex;
    flex-direction: column;
    gap: 4px;
    height: 100%;
    position: relative;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    padding: 4px;

    .box-dropdown {
        background: rgba(0, 0, 0, 0.1) !important;
        padding: 4px 24px;
        border-radius: 4px;

        .dropdown {
            position: relative;
            display: flex;
            flex-direction: column;

            text() {
                font-family: Ubuntu;
                font-size: 20px;
                font-weight: 400;
                line-height: 25px;
                text-align: left;
                color: rgba(0, 0, 0, 1);
                cursor: pointer;
                background: transparent;
            }

            viewDrop(isView = true) {
                opacity: isView ? 1 : 0;
                height: isView ? auto : 0;
                pointer-events: isView ? auto : none;
            }

            button {
                display: flex;
                flex-direction: row;
                align-items: center;
                gap: 16px;
                justify-content: space-between;
                width: 100%;
                padding: 0 4px;
                cursor: pointer;
                background: transparent;

                img {
                    width: 12px;
                    height: 18px;
                }

                p {
                    text();
                }

                &:focus ~ div {
                    viewDrop();
                }
            }

            > div {
                position: absolute;
                left: 0;
                top: calc(100% + 4px);
                z-index: 1;
                display: flex;
                flex-direction: column;
                justify-content: flex-start;
                background: white-color;
                max-height: 192px;
                min-width: 324px;
                width: 100%;
                z-index: 6;
                overflow-y: auto;
                viewDrop(false);
                scrollbar-gutter: stable;
                border-radius: 0 0 8px 8px;

                &:active, &:focus-within {
                    viewDrop();
                }

                span {
                    text();
                    padding: 4px;

                    &:hover {
                        background: rgba(0, 0, 0, 0.1);
                    }
                }

                label {
                    display: flex;
                    flex-direction: row;
                    align-items: center;
                    justify-content: space-between;
                    padding: 4px;
                    cursor: text;
                    position: sticky;
                    top: 0;
                    background: white-color;

                    img {
                        width: 16px;
                        height: 16px;
                    }

                    input {
                        cursor: text !important;
                        text();
                        max-width: 92px;
                    }
                }
            }
        }
    }

    > .editor {
        height: 100%;
    }

    .code {
        .code-fields {
            > div {
                outline: none;
            }
        }
    }
}