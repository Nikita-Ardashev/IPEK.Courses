@import '../../../variables.styl';

.course-card-box {
    display: flex;
    flex-direction: column;
    gap: 8px;
    width: 376px;
    flex-shrink: 0;

    .course-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 208px;
        position: relative;
        background: rgba(0, 0, 0, 0.4);
        border-radius: 8px;
    }

    .course-card__title {
        position: absolute;
        top: 8px;
        left: 8px;
        font-family: Sans;
        font-size: 20px;
        font-weight: 400;
        line-height: 22px;
        text-align: left;
        color: white-color;
    }

    .course-card__info {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        width: -webkit-fill-available;
        padding: 0 16px 0 32px;
        height: 100%;

        span {
            display: flex;
            flex-direction: column;
            gap: 2px;
            align-items: flex-start;
        }

        h3 {
            font-family: Roboto;
            font-size: 16px;
            font-weight: 400;
            line-height: 18.75px;
            text-align: center;
            color: white-color;
        }

        h2 {
            font-family: Sans;
            font-size: 32px;
            font-weight: 400;
            line-height: 35.2px;
            text-align: center;
            color: white-color;
        }

        img {
            width: 128px;
            height: 128px;
        }
    }

    .course-card__control {
        display: flex;
        flex-direction: row;
        align-items: center;
        width: 100%;
        gap: 32px;

        a {
            font-family: Roboto;
            font-size: 24px;
            font-weight: 600;
            line-height: 28.13px;
            text-align: center;
            color: white-color;
            width: 50%;
            padding: 10px;
            border-radius: 8px;
            background: rgba(0, 0, 0, 0.1);
        }
    }

    .course-progress {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 18px 0;
        width: 100%;
        border-radius: 8px;
        border: 1px solid blue-color;

        p {
            font-family: Roboto;
            font-size: 24px;
            font-weight: 600;
            line-height: 28.13px;
            text-align: center;
        }
    }
}
