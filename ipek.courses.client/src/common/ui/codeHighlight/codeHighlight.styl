@import '../../../variables.styl';

.box-code-hljs {
    height: -webkit-fill-available;
    position: relative;
    background: rgba(77, 80, 97, 0.08);
    border-radius: 8px;

    .box-dropdown {
        position: absolute;
        right: 0;
        background: white-color !important;
        border: 4px solid rgba(77, 80, 97, 0.08);
        border-radius: 0 0 0 8px;
        z-index: 10;

        .dropdown {
            position: relative;
            display: flex;
            flex-direction: column;

            text() {
                font-family: Ubuntu;
                font-size: 12px;
                font-weight: 400;
                line-height: 25px;
                text-align: left;
                color: #00000099;
                cursor: pointer;
                background: transparent;
            }

            viewDrop(isView = true) {
                opacity: isView ? 1 : 0;
                height: isView ? auto : 0;
                pointer-events: isView ? auto : none;
            }

            button {
                display: flex;
                flex-direction: row;
                align-items: center;
                justify-content: space-between;
                gap: 2px;
                padding: 0 4px;
                cursor: pointer;
                width: 100%;
                background: transparent;

                img {
                    width: 8px;
                    height: 6px;
                }

                p {
                    text();
                }

                &:focus ~ div {
                    viewDrop();
                }
            }

            > div {
                display: flex;
                flex-direction: column;
                justify-content: flex-start;
                background: white-color;
                max-height: 192px;
                overflow-y: auto;
                viewDrop(false);
                scrollbar-gutter: stable;
                border-radius: 0 0 8px 8px;

                &:active, &:focus-within {
                    viewDrop();
                }

                span {
                    text();
                    padding: 4px;

                    &:hover {
                        background: rgba(0, 0, 0, 0.1);
                    }
                }

                label {
                    display: flex;
                    flex-direction: row;
                    align-items: center;
                    justify-content: space-between;
                    padding: 4px;
                    cursor: text;
                    position: sticky;
                    top: 0;
                    background: white-color;

                    img {
                        width: 16px;
                        height: 16px;
                    }

                    input {
                        cursor: text !important;
                        text();
                        max-width: 92px;
                    }
                }
            }
        }
    }

    .code-hljs {
        height: inherit;
        height: 100%;

        codeStyle() {
            font-family: monospace !important;
            letter-spacing: 0.2px !important;
            height: -webkit-fill-available;
            padding: 32px 16px !important;
            background: transparent !important;
            width: -webkit-fill-available;
            font-weight: 400;
            font-size: 12px;
        }

        > textarea {
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            resize: none;
            codeStyle();
            z-index: 1;
        }

        >pre {
            background: transparent !important;
            padding: 0 !important;
            height: 100%;

            >code {
                display: block;
                codeStyle();
                height: -webkit-fill-available;

                span {
                    white-space: pre-wrap;
                }
            }
        }
    }
}
