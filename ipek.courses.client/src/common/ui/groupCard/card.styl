.group-card {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 16px;
    max-width: 376px;
    height: 104px;
    border-radius: 8px;
    box-shadow: 0px 0px 4px 1px #00000040;
    flex-shrink: 0;

    span {
        display: block;
        height: 100%;
        width: 12px;
        border-radius: 8px 0 0 8px;
    }

    p {
        font-family: Sans;
        font-size: 32px;
        font-weight: 400;
        line-height: 44px;
        text-align: left;
        padding: 0 24px;
    }
}
