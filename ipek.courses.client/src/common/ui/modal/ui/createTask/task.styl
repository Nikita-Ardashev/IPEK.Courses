@import '../../../../../variables.styl';

.modal-task {
    > span {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        width: 100%;

        label {
            cursor: pointer;

            p {
                padding: 10px 24px;
                font-family: Roboto;
                font-size: 24px;
                font-weight: 600;
                line-height: 28.13px;
                text-align: left;
                border-radius: 8px;
            }

            input {
                &:checked ~ p {
                    background: rgba(0, 0, 0, 0.1);
                }
            }
        }
    }
}