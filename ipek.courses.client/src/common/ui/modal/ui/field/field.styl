@import '../../../../../variables.styl';

field() {
    font-family: Roboto;
    font-size: 24px;
    font-weight: 400;
    line-height: 28.13px;
    text-align: left;
    background: rgba(0, 0, 0, 0.06);
    padding: 12px 16px;
    width: -webkit-fill-available;
}

.modal-field {
    field();
    border-radius: 8px;

    &::placeholder {
        color: gray-color;
    }
}

.modal-dropdown {
    display: flex;
    flex-direction: column;
    width: -webkit-fill-available;
    cursor: pointer;
    position: relative;
    z-index: 10;

    .modal-field {
        color: gray-color;
    }

    div {
        position: absolute;
        top: 100%;
        left: 0;
        display: flex;
        flex-direction: column;
        width: 100%;
        max-height: 156px;
        border-radius: 8px;
        overflow-y: auto;
        background: white-color;

        &::-webkit-scrollbar, &::-webkit-scrollbar-thumb {
            border-radius: 0 8px 8px 0 !important;
        }

        input {
            transition();
            field();

            &:hover {
                background: transparentify(black-color, gray-color, 0.1);
            }
        }
    }
}