@import '../../../variables.styl';

.list-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: left;
    width: -webkit-fill-available;
    stateBtn(white-color);
    border-radius: 8px;
    padding: 0 16px;

    a {
        width: -webkit-fill-available;
    }

    p {
        display: flex;
        flex-direction: row;
        padding: 20px 0;
        width: -webkit-fill-available;
        gap: 4px;
        font-family: Roboto;
        font-size: 32px;
        font-weight: 400;
        line-height: 37.5px;
        text-align: left;
    }
}

.list-item__edit {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 24px;

    button {
        background: transparent;

        img {
            width: 24px;
            height: 24px;
        }
    }
}