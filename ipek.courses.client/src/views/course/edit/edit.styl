@import '../../../variables.styl';

.edit {
    display: flex;
    flex-direction: column;
    width: 100%;
    gap: 16px;

    .edit__heading {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;

        > button {
            white-space: nowrap;
        }

        > div {
            display: flex;
            flex-direction: column;
            gap: 8px;

            h2 {
                font-family: Sans;
                font-size: 40px;
                font-weight: 400;
                line-height: 44px;
                text-align: left;
            }

            span {
                display: flex;
                flex-direction: row;
                align-items: center;
                gap: 32px;

                p {
                    font-family: Roboto;
                    font-size: 20px;
                    font-weight: 400;
                    line-height: 23.44px;
                    color: rgba(0, 0, 0, 0.6);
                }

                button {
                    p {
                        font-family: Roboto;
                        font-weight: 600;
                        color: black-color;
                    }

                    background: transparent;
                }
            }
        }
    }

    .edit__list {
        display: flex;
        flex-direction: column;
        width: 100%;
    }
}
