@import '../../../../variables.styl';

.constructor-code {
    display: flex;
    flex-direction: row;
    flex: 1 1 auto;
    gap: 16px;
    position: relative;
    height: 100%;

    > div {
        display: flex;
        flex-direction: column;
        min-width: 20%;
        width: 100%;
    }

    .constructor-code__box-editor {
        gap: 12px;

        > div, > div > div {
            padding: 0 !important;
        }

        > div > div::before {
            left: 0;
            right: auto;
        }
    }

    .constructor-code__questions {
        gap: 16px;

        > div {
            &:first-child {
                display: flex;
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
            }
        }

        h3 {
            font-family: Sans;
            font-size: 32px;
            font-weight: 400;
            line-height: 35.2px;
            text-align: left;
        }

        > .constructor-code__question {
            display: flex;
            flex-direction: column;
            gap: 16px;
            height: 100%;

            > textarea {
                font-family: Roboto;
                font-size: 16px;
                font-weight: 400;
                line-height: 18.75px;
                text-align: left;
                max-height: 128px;
                min-height: 32px;
                width: -webkit-fill-available;
                padding: 16px;
                background: rgba(77, 80, 97, 0.08);
                border-radius: 8px;
                resize: vertical;
            }

            > .constructor-code__compiler {
                display: flex;
                flex-direction: column;
                gap: 8px;

                > textarea {
                    font-family: Roboto;
                    font-size: 16px;
                    font-weight: 400;
                    line-height: 18.75px;
                    text-align: left;
                    max-height: 128px;
                    width: -webkit-fill-available;
                    padding: 16px;
                    background: rgba(77, 80, 97, 0.08);
                    border-radius: 8px;
                    resize: none;
                    height: fit-content;
                }

                > h4 {
                    font-family: Roboto;
                    font-size: 16px;
                    font-weight: 400;
                    line-height: 18.75px;
                    text-align: left;
                    color: black-color;
                }
            }
        }
    }
}
