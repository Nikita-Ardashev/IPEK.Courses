@import '../../../../../variables.styl';

.constructor-header {
    flex: 0 1 auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background: white-color;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    z-index: 1;
    gap: 16px;

    .constructor-header__return {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 16px;
        background: transparent;

        img {
            width: 24px;
            height: 24px;
        }

        p {
            font-family: Roboto;
            font-size: 24px;
            font-weight: 600;
        }
    }

    .constructor-header__title {
        font-family: Sans;
        font-size: 40px;
        background: rgba(77, 80, 97, 0.08);
        border-radius: 8px;
        padding-left: 4px;
        padding-right: 4px;
        min-width: 308px;
        max-width: 614px;
        width: 100%;
        text-align: center;

        &:read-only {
            color: black-color;
            background: transparent;
        }
    }

    .constructor-header__timer {
        padding-left: 32px;
        padding-right: 4px;
        position: relative;
        font-family: Roboto;
        font-size: 24px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        color: #00000099;
        background: rgba(77, 80, 97, 0.08);
        border-radius: 8px;

        &::-webkit-calendar-picker-indicator {
            cursor: pointer;
            opacity: 0.4;
            width: 24px;
            height: 24px;
            position: absolute;
            left: -8px;
        }
    }

    .constructor-header__save {
        background: black-color;
        font-family: Roboto;
        font-size: 24px;
        font-style: normal;
        font-weight: 600;
        line-height: normal;
        color: white-color;
        padding: 10px 24px;
        border-radius: 8px;
        stateBtn(black-color);
    }
}