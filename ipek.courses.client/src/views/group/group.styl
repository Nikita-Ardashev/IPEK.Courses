@import '../../variables.styl';

.group {
    display: flex;
    flex-direction: column;
    width: 100%;
    gap: 16px;

    .group__heading {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;

        h2 {
            font-family: Sans;
            font-size: 40px;
            font-weight: 400;
            line-height: 44px;
            text-align: left;
        }
    }

    .group__list {
        display: flex;
        flex-direction: column;
        width: 100%;
    }
}
